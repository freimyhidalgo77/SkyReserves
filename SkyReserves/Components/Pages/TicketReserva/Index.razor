@page "/Ticket/Index"
@rendermode InteractiveServer
@inject ReservaService reservaService
@inject VueloService vueloService
@inject OrigenService origenService
@inject DestinoService destinoService
@inject AsientoDetalleService asientoDetalleService
@inject ClaseVueloDetalleService claseVueloDetalleService
@inject ClaseVueloService claseVueloService

<link rel="stylesheet" href="/Style/Ticket.css" />

<PageTitle>Reserva Vuelo</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h3><strong>Detalles de la reserva creada</strong></h3>
        </div>
        <div class="card-body">
            <div class="mb-1">
                <p><strong>Reserva ID:</strong> @Reserva?.ReservaId</p>
            </div>
            <div class="mb-1">
                <p><strong>Origen:</strong> @Origen?.origen</p>
            </div>
            <div class="mb-1">
                <p><strong>Destino:</strong> @Destino?.destino</p>
            </div>
            <div class="mb-1">
                <p><strong>Número de pasajeros:</strong> @vuelo2?.NumeroPasajeros</p>
            </div>
        </div>

        <div class="bordered bordered-success pt-3 mt-3">
            <!-- Tabla para los detalles del asiento -->
            <h5><strong>Detalles de los Asientos:</strong></h5>
            <table class="table table-light table-bordered">
                <thead class="table table-striped text-center">
                    <tr>
                        <th>Asiento</th>
                        <th>Fila</th>
                        <th>Letra</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asientoDetalle in AsientoDetalleList)
                    {
                        <tr>
                            <td>@asientoDetalle?.Asiento?.Fila - @asientoDetalle?.Asiento?.Letra</td>
                            <td>@asientoDetalle?.Existencia</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Tabla para los detalles de la clase de vuelo -->
            <h5><strong>Detalles de la Clase de Vuelo:</strong></h5>
            <table class="table table-light table-bordered">
                <thead class="table table-striped text-center">
                    <tr>
                        <th>Clase de Vuelo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claseVueloDetalle in ClaseVueloDetalleList)
                    {
                      
                        <tr>
                            <td>@claseVueloDetalle?.DescripcionClase ?? "No encontrada"</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    [Parameter] public int ReservaId { get; set; }
    public Reserva Reserva { get; set; } = new Reserva();
    public AsientoDetalle AsientoDetalle { get; set; } = new AsientoDetalle();
    public List<AsientoDetalle> AsientoDetalleList { get; set; } = new List<AsientoDetalle>();
    public List<ClaseVueloDetalle> ClaseVueloDetalleList{ get; set; } = new List<ClaseVueloDetalle>();
    public Origen Origen { get; set; } = new Origen();
    public Destino Destino { get; set; } = new Destino();
    public Vuelo vuelo2 { get; set; } = new Vuelo();
    public List<Asiento> Asientos { get; set; } = new List<Asiento>();
    public Asiento asient { get; set; } = new Asiento();
    public ClaseVuelo claseVuelo { get; set; } = new ClaseVuelo();

    protected override async Task OnInitializedAsync()
    {
        // Obtener la reserva actual
        Reserva = await reservaService.Buscar(ReservaId);

        // Obtener los datos relacionados (origen y destino)
        if (Reserva != null)
        {
            Origen = await origenService.Buscar(Reserva.OrigenId);
            Destino = await destinoService.Buscar(Reserva.DestinoId);
        }

        // Obtener los detalles de los asientos de la reserva
       AsientoDetalleList = await asientoDetalleService.ListarAsientoDetalle(ReservaId);

       ClaseVueloDetalleList = await asientoDetalleService.ListarClaseVueloDetalles(ReservaId);
    

      
    }
}
